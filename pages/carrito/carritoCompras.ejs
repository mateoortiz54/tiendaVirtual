<% if(usuario){ %>
    <%- include('../partials/headers', {usuario:usuario})%>  
  <% } else{ %>  
    <%- include('../partials/headers', {usuario:false})%>
 <% } %>
    <div   style="margin-top: 8em; margin-left:2em ;  margin-right: 2em;  ; margin-bottom: 2em;" >
        <section id="Listar Productos"  >
            <div style="display: flex; justify-content: space-around;">
                <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-white-800">
                    Carrito de Compras
                </h1>
            </div>
            <!-- <% if(usuario){ %>
                <h1><%= usuario[1] %></h1>
              <% } else{ %>  
                <h1>No hay usuario</h1>
             <% } %> -->
            <% if(datos){ %>
                <div style="display: flex; justify-content: space-around;">
                    <a
                    class="mx-auto lg:mx-0 hover:underline bg-white text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out"
                    href="/borrarCarritoCompras">
                    Borrar Carrito
                    </a>
                    
                </div><br>
                <table class="striped " >
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Referencia</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Estado</th>
                            <th>imagen</th>
                            <th>opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <% datos.forEach ( (e) => { %>
                            <tr>
                                <td> <%= e.Nombre %> </td>
                                <td> <%= e.Referencia %> </td>
                                <td> <%= e.Precio %> </td>
                                <td> <%= e.Stock %> </td>
                                <td> <%= e.Habilitado %> </td>
                                <td> <%= e.imagen %> </td>
                                <td> 
                                    <a class="waves-effect waves-light btn-small" href="/eliminarProducto/<%= e._id %>">Eliminar</a>
                                    <!--<button class="waves-effect waves-light btn-small" onclick="alertica()" name="action">Alertica</button>-->
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>

    
                </table>
                

            <% } else{ %>  
                <section class="container mx-auto text-center py-6 mb-12">
                    <h2 class="w-full my-2 text-5xl font-bold leading-tight text-center text-white">
                        No Tienes nada agregado a tu carrito!!!!
                    </h2>
                    <div class="w-full mb-4">
                        <div class="h-1 mx-auto bg-white w-1/6 opacity-25 my-0 py-0 rounded-t"></div>
                    </div>
                    <h3 class="my-4 text-3xl leading-tight">
                        ¿Qué estas esperando?!
                    </h3>
                    <a
                        class="mx-auto lg:mx-0 hover:underline bg-white text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out"
                        href="/listarProductos">
                        Vamos a Comprar
                    </a>
                </section>
                <h1>Carrito de Compras Vacio, vuelva a la tienda y agregue, compre compre</h1>
            <% } %>
            
            
        </section>
    </div>
    
    
<%- include('../partials/footer'); %>
